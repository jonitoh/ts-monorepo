{
	"compilerOptions": {
		"allowJs": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"esModuleInterop": true,
		"target": "es6",
		"module": "CommonJS",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"noEmit": true,
		"paths": {
			"@jonitoh-ts-monorepo/*": ["./services/*/"]
		}
	},
	"include": ["**/*.js", "**/*.ts"],
	"exclude": [
		".jest_cache",
		"assets",
		"build",
		"coverage",
		"dist",
		"node_modules",
		"scripts",
		"services"
	]
}
