{
	"extends": "./tsconfig.eslint.json",
	"compilerOptions": {
		"noEmit": false,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"incremental": true,
		"composite": true,
		"rootDir": "src",
		"outDir": "dist"
	},
	"references": [
		{
			"path": "../common"
		}
	],
	"include": ["src/**/*.ts", "src/**/*.js"],
	"exclude": ["**/tests/**", "**/*.test.ts", "**/*.test.js"]
}
