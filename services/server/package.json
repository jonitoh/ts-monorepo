	"repository": {
		"type": "git",
		"directory": "services/server",
		"url": "git+https://github.com/jonitoh/ts-monorepo.git"
	},
	"homepage": "https://github.com/jonitoh/ts-monorepo#readme",
	"engines": {
		"node": "17.0.1",
		"npm": "8.1.0"
	},
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"scripts": {
		"format": "prettier --config ../../.prettierrc --ignore-path ../../.prettierignore 'src/*.ts'",
		"postformat": "rimraf node_modules",
		"format:fix": "prettier --config ../../.prettierrc --ignore-path ../../.prettierignore --write 'src/*.ts'",
		"postformat:fix": "rimraf node_modules",
		"lint": "eslint --ignore-path ../../.eslintignore --ext .ts,.js",
		"lint:fix": "eslint --ignore-path ../../.eslintignore --ext .ts,.js --fix",
		"verify": "npm-run-all --sequential format:fix lint:fix",
		"test": "echo 'Error: no test specified'",
		"dev": "NODE_ENV=development NODE_DOTENV_PATH=../../.env NODE_DOTENV_DEBUG=true ts-node -r tsconfig-paths/register src/index.ts",
		"clean": "rimraf dist tsconfig.tsbuildinfo",
		"compile": "tsc --build",
		"build": "npm-run-all --sequential clean compile",
		"start": "NODE_ENV=production node dist/index.js",
		"start:dev": "NODE_ENV=development NODE_DOTENV_PATH=../../.env NODE_DOTENV_DEBUG=true node dist/index.js",
		"prepublishOnly": "npm run build",
		"watch": "tsc --build -w --preserveWatchOutput"
	},
	"dependencies": {},
	"devDependencies": {}
}
