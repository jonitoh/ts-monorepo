{
	"extends": "./tsconfig.eslint.json",
	"compilerOptions": {
		"incremental": true,
		"composite": true,
		"rootDir": "src",
		"noEmit": false,
		"outDir": "build",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true
	},
	"references": [
		{
			"path": "../common"
		}
	],
	"include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx"],
	"exclude": ["**/tests/**", "**/*.test.ts", "**/*.test.tsx", "**/*.test.js", "**/*.test.jsx"]
}
