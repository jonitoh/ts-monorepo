{
    "extends": "../tsconfig.settings.json",
    "include": [
        "src/**/*"
    ],
    "compilerOptions": {
        "composite": true,
        "rootDir": "src",
        "outDir": "dist",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "jsx": "react-jsx",
        "module": "CommonJS",
        "baseUrl": "src",
        "paths": {
            "#/*": [
                "*"
            ]
        },
        "typeRoots": [
            "src/@types",
            "../../node_modules/@types"
        ],
        "types": [
            "react",
            "react-dom",
            "node"
        ]
    },
    "references": [
        {
            "path": "../common"
        }
    ]
}