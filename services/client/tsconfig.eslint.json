{
	"extends": "../tsconfig.eslint.json",
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"jsx": "react-jsx",
		"typeRoots": ["src/declaration.d.ts", "../../node_modules/@types", "../../types"],
		"types": ["react", "react-dom", "node"],
		"paths": {
			"#/*": ["src/*"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.config.js", "**/*.config.ts"]
}
