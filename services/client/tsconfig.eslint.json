{
	"extends": "../tsconfig.eslint.json",
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"jsx": "react",
		"module": "CommonJS",
		"paths": {
			"@jonitoh-ts-monorepo/*": ["./services/*/"],
			"#/*": ["./src/*"]
		}
	},
	"typeRoots": ["src/types", "src/declaration.d.ts", "../../node_modules/@types"],
	"types": ["react", "react-dom", "node"],
	"include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"]
}
